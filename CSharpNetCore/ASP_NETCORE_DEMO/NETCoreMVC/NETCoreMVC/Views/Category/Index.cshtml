@model IEnumerable<NETcoreWebMVC.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
                    @{
                        if(item.Status == true)
                        {
                            <text>Show</text>
                        }
                        else
                        {
                            <text>Hide</text>
                        }
                    }
            </td>
            <td>
                <div class="btn btn-outline-secondary">@Html.ActionLink("Edit", "Edit", new {  id=item.Id  }) | </div>
                <div class="btn btn-outline-success"> @Html.ActionLink("Details", "Details", new {  id=item.Id  }) | </div>
                <div class="btn btn-outline-warning">@Html.ActionLink("Delete", "Delete", new {  id=item.Id  }) </div>
            </td>
        </tr>
}
    </tbody>
</table>
